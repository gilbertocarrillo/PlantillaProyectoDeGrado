    \ifin@forme
       \@author
    \else
        \@tituloautor~\@author\\
        \ifms@c
        %
        \else
          \vskip0.1in
          \iftiene@tutor \@tutorname: \@tutor 
          \fi
          \ifcotutela@cotut \\ Cotutor: \@cotutor
          \fi
        \fi
    \fi
    \end{center}
    \vfill
    \begin{center}
      \expandafter{\@fechaentrega\space\@copyrightyear} \par
      \vskip0.25in
      \ifin@forme
        \expandafter{\@direccion}
